#!/usr/bin/python2.6

try:
    import lib as larch
except:
    import larch
    
import sys
import getopt


debug=True
opts, args = getopt.getopt(sys.argv[1:], "hq", ["help", "quiet"])

for k,v in opts:
    if k in ("-h", "--help"):   show_usage()
    if k in ("-q", "--quiet"):  quiet = v
    if k in ("-d", "--debug"):  debug = v

t = larch.shell(debug=debug)

if len(args)>0:
    for s in args:
        if s.endswith('.py'):    s = s[:-3]
        elif s.endswith('.lar'): s = s[:-4]
        t.default("import %s" % s)
else:
    t.cmdloop()

